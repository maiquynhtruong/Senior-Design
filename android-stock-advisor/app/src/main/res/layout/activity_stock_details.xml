<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <include
        android:id="@+id/stock_card"
        layout="@layout/stock_card"
        />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stock_card"
        tools:layout_editor_absoluteX="0dp" />
    <TextView
        android:id="@+id/user_prediction_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/stock_card"
        android:textSize="20sp"
        android:text="Your Prediction"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/user_prediction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$12345"
        android:textSize="25sp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/user_prediction_text"/>

    <Button
        android:id="@+id/show_advice_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/google_blue"
        android:text="SHOW ADVICE"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/user_prediction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/app_prediction_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/show_advice_btn"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:text="App's Prediciton" />

    <TextView
        android:id="@+id/app_prediction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/app_prediction_text"
        android:text="$12345"
        android:textSize="25sp"
        android:layout_marginStart="20dp"
        />

</android.support.constraint.ConstraintLayout>