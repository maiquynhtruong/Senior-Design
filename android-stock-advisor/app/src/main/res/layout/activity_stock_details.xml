<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <include
        android:id="@+id/stock_card"
        layout="@layout/stock_card"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="29dp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stock_card"
        tools:layout_editor_absoluteX="0dp"
        />

    <TextView
        android:id="@+id/user_prediction_text"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="102dp"
        android:background="@color/google_blue"
        android:text="Your Prediction"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/stock_card"
        tools:layout_editor_absoluteX="0dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/user_prediction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$33.0"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/user_prediction_text"/>

    <Button
        android:id="@+id/show_advice_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/mybutton"
        android:padding="10dp"
        android:text="SHOW ADVICE"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_prediction" />

    <TextView
        android:id="@+id/app_prediction_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:background="@color/google_blue"
        android:text="App's Prediciton"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/show_advice_btn"
        android:gravity="center" />

    <TextView
        android:id="@+id/app_prediction"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:text="$32.5"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_prediction_text"
        android:gravity="center" />

</android.support.constraint.ConstraintLayout>