<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <include
        android:id="@+id/stock_card"
        layout="@layout/stock_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stock_card"
        tools:layout_editor_absoluteX="0dp"
        />

    <TextView
        android:id="@+id/user_prediction_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@android:color/holo_blue_light"
        android:text="Your Prediction"
        android:textSize="@dimen/title_size"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/stock_card"
        android:gravity="center" />

    <EditText
        android:id="@+id/user_prediction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What do you predict?"
        android:textSize="@dimen/text_size"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/user_prediction_text"
        />

    <Button
        android:id="@+id/show_advice_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/mybutton"
        android:padding="10dp"
        android:text="SHOW ADVICE"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:backgroundTint="@android:color/holo_orange_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_prediction" />

    <TextView
        android:id="@+id/app_prediction_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:background="@android:color/holo_green_light"
        android:text="App's Prediction"
        android:textSize="25sp"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/show_advice_btn"
        android:gravity="center"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/app_prediction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USD 132.5"
        android:textSize="30sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_prediction_title"
        android:gravity="center"
        android:visibility="gone"/>

    <Button
        android:id="@+id/show_prediction_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/mybutton"
        android:padding="10dp"
        android:text="SHOW STATISTICS"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:backgroundTint="@android:color/holo_green_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_prediction" />

    <TextView
        android:id="@+id/coefficient_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_red_light"
        android:text="Coefficients"
        android:textSize="@dimen/title_size"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/show_prediction_stat"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/coefficient_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1.0"
        android:textSize="@dimen/text_size"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/coefficient_title"
        />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/prediction_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/coefficient_title"/>

</android.support.constraint.ConstraintLayout>